package system

author	Matthias.Wiesmann@cern.ch
manager	Andrei.Kazarov@cern.ch

use TDAQPolicy
use ers

private

macro    SYS_LIB_SRC   "../src/*.cxx"
      
	
########################################################################################################
#       System Library
########################################################################################################


library		osw	        	$(SYS_LIB_SRC)

macro		osw_shlibflags		"-lers"


apply_pattern   install_libs            files='libosw.so'
macro           osw_cppflags		""

########################################################################################################
#       Test applications
########################################################################################################

application	system_test 			-group=check -check ../test/SystemTest.cxx
macro		system_test_dependencies 	"osw"
macro           system_test_cppflags		""
macro		system_testlinkopts		"-losw -lers"
